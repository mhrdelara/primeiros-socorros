// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Usuario {
  id              Int      @id @default(autoincrement())
  nome            String
  sobrenome       String
  data_nascimento DateTime
  email           String
  crm             String
  funcao          String
  matricula       String
  foto_perfil     String
  senha           String
  Videos          Videos[]
}

model Videos {
  id            Int        @id @default(autoincrement())
  denuncia      Int
  descricao     String
  data_postagem DateTime   @default(now())
  like          String
  dislike       String
  titulo        String
  urlVideo      String
  usuario       Usuario   @relation(fields: [usuarioId], references: [id])
  usuarioId     Int
}

model Materiais {
  id            Int      @id @default(autoincrement())
  anexo         String
  data_postagem DateTime @default(now())
}
